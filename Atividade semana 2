void main (){
var jogador1 = 'par';
var jogador2 = 'impar';
var valor1 = 3;
var valor2 = 2;
var total = valor1 + valor2;

if (total % 2 == 0 && jogador1 == 'par'){
print ('jogador 1 ganhou');}
else if (total % 2 != 0 && jogador1 == 'impar'){
print ('jogador 1 ganhou');}
else {
print('jogador 2 ganhou');
}
}
