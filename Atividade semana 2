void main (){
int a = 2;
int b = 3;
int c = 2;
int d = 6;
int somacd = c + d;
int somaab = a + b;
if ((b > c && d > a) && (somacd > somaab) && (c > 0 && d > 0 ) && (a % 2 == 0)) {
print ('valores aceitos');
} else {
print  ('valores não aceitos');

}
}

